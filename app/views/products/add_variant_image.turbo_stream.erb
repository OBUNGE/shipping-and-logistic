<turbo-stream action="append" target="variant_<%= @variant.id %>_images">
  <template>
    <%= form_with model: @product do |form| %>
      <%= form.fields_for :variants, @variant do |variant_fields| %>
        <%= variant_fields.fields_for :variant_images, @variant.variant_images.build do |image_fields| %>
          <%= render "variant_image_fields", f: image_fields %>
        <% end %>
      <% end %>
    <% end %>
  </template>
</turbo-stream>
