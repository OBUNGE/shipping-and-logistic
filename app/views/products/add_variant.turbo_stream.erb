<%= turbo_stream.append "variant-fields" do %>
  <%= form_with model: @product do |form| %>
    <%= form.fields_for :variants, @variant do |variant_fields| %>
      <%= render "variant_fields", f: variant_fields %>
    <% end %>
  <% end %>
<% end %>

<%= turbo_stream.update "variants_count" do %>
  <%= @product.variants.count %>
<% end %>
