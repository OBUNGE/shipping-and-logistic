<h1 class="mb-4">Edit Your Review</h1>

<%= form_with model: [@product, @review], local: true, html: { class: "card p-4 shadow-sm" } do |f| %>
  <% if @review.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@review.errors.count, "error") %> prevented this review from being saved:</h5>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :rating, "Rating (1–5)", class: "form-label" %>
    <%= f.number_field :rating, in: 1..5, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :comment, "Your Review", class: "form-label" %>
    <%= f.text_area :comment, rows: 4, class: "form-control", placeholder: "Update your experience..." %>
  </div>

  <%= f.submit "Update Review", class: "btn btn-primary" %>
<% end %>

<div class="mt-3">
  <%= link_to "← Back to Product", product_path(@product), class: "btn btn-link" %>
</div>
