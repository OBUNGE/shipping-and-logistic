<%# --- SEO Meta Tags --- %>
<% content_for :title, "TAJAONE | #1 Premium Leather Shop in Nairobi & Kenya" %>
<% content_for :meta_description, "Shop authentic Kenyan leather bags, wallets, and belts. Handcrafted in Nairobi. Secure M-PESA payment and fast countrywide delivery." %>
<% content_for :meta_keywords, "leather bags Kenya, authentic leather Nairobi, mens wallets Kenya, handcrafted leather, Maasai leather, Tajaone" %>

<section class="hero-section position-relative text-white mb-5">
  <div class="hero-bg-overlay" style="background-image: url('<%= asset_path("leather-hero.jpg") %>');"></div>
  <div class="container position-relative z-2 h-100 d-flex align-items-center justify-content-center text-center">
    <div class="col-lg-8">
      <h1 class="display-3 fw-bold mb-3">Timeless Kenyan Craftsmanship</h1>
      <p class="lead mb-4 text-white-50">
        Premium leather bags, wallets, and accessories handcrafted in Nairobi. 
        Built to last a lifetime.
      </p>
      <div class="d-flex justify-content-center gap-3">
        <%= link_to "Shop Collection", products_path, class: "btn btn-primary btn-lg px-5 shadow-sm" %>
        <%= link_to "View Best Sellers", products_path(category: 'best-sellers'), class: "btn btn-outline-light btn-lg px-5" %>
      </div>
    </div>
  </div>
</section>

<section class="container mb-5">
  <div class="row g-4 text-center">
    <div class="col-md-4">
      <div class="p-4 border rounded-3 bg-light h-100">
        <i class="bi bi-patch-check-fill text-primary fs-2 mb-3"></i>
        <h5 class="fw-bold">100% Genuine Leather</h5>
        <p class="text-muted small mb-0">We use only authentic, locally sourced full-grain leather that ages beautifully.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded-3 bg-light h-100">
        <i class="bi bi-truck text-primary fs-2 mb-3"></i>
        <h5 class="fw-bold">Fast Delivery</h5>
        <p class="text-muted small mb-0">Same-day delivery within Nairobi. 24-48 hours via Wells Fargo/G4S countrywide.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded-3 bg-light h-100">
        <i class="bi bi-phone-flip text-primary fs-2 mb-3"></i>
        <h5 class="fw-bold">Secure Payment</h5>
        <p class="text-muted small mb-0">Pay securely via M-PESA Till or Card. Cash on Delivery available in Nairobi.</p>
      </div>
    </div>
  </div>
</section>

<section class="container mb-5">
  <div class="d-flex justify-content-between align-items-end mb-4">
    <h2 class="fw-bold m-0">Browse by Category</h2>
    <%= link_to "View All", products_path, class: "text-decoration-none fw-semibold" %>
  </div>
  
  <div class="row g-3">
    <div class="col-md-4">
      <%= link_to products_path(category: 'bags'), class: "card text-white border-0 overflow-hidden shadow-sm h-100 category-card" do %>
        <%= image_tag "cat-bags.jpg", class: "card-img", alt: "Leather Bags Kenya" %>
        <div class="card-img-overlay d-flex align-items-end gradient-overlay">
          <h3 class="card-title fw-bold">Leather Bags</h3>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to products_path(category: 'wallets'), class: "card text-white border-0 overflow-hidden shadow-sm h-100 category-card" do %>
        <%= image_tag "cat-wallets.jpg", class: "card-img", alt: "Men's Wallets Nairobi" %>
        <div class="card-img-overlay d-flex align-items-end gradient-overlay">
          <h3 class="card-title fw-bold">Wallets</h3>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <%= link_to products_path(category: 'belts'), class: "card text-white border-0 overflow-hidden shadow-sm h-100 category-card" do %>
        <%= image_tag "cat-belts.jpg", class: "card-img", alt: "Official Leather Belts" %>
        <div class="card-img-overlay d-flex align-items-end gradient-overlay">
          <h3 class="card-title fw-bold">Belts & Accessories</h3>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="container mb-5">
  <h2 class="fw-bold mb-4 text-center">New Arrivals</h2>
  
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
    <% if @featured_products.any? %>
      <% @featured_products.each do |product| %>
        <div class="col">
          <div class="card h-100 border-0 shadow-sm product-hover">
            <div class="position-relative overflow-hidden">
              <%= link_to product_path(product) do %>
                <% if product.image_url.present? %>
                  <%= image_tag product.image_url, class: "card-img-top object-fit-cover", style: "height: 250px;", alt: product.title %>
                <% else %>
                  <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                    <span class="text-muted">No Image</span>
                  </div>
                <% end %>
              <% end %>
              <% if product.discount&.active? %>
                <span class="discount-badge top-left">-<%= product.discount.percentage %>%</span>
              <% end %>
            </div>

            <div class="card-body">
              <h6 class="card-title text-truncate">
                <%= link_to product.title, product_path(product), class: "text-dark text-decoration-none" %>
              </h6>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <% if product.discount&.active? %>
                  <% converted = ExchangeRateService.new.convert_to_kes(product.discounted_price) %>
                  <span class="fw-bold text-primary">KES <%= number_with_delimiter(converted.to_i) %></span>
                  <small class="text-muted text-decoration-line-through">KES <%= number_with_delimiter(product.price.to_i) %></small>
                <% else %>
                  <span class="fw-bold text-primary">KES <%= number_with_delimiter(product.price.to_i) %></span>
                <% end %>
                <% if product.shipping_cost == 0 %>
                  <span class="badge bg-success bg-opacity-10 text-success border border-success">Free Shipping</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center py-5">
        <p class="text-muted">No products found. Please add products to the database.</p>
      </div>
    <% end %>
  </div>
  
  <div class="text-center mt-5">
    <%= link_to "View All Products", products_path, class: "btn btn-outline-dark px-5" %>
  </div>
</section>

<section class="bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <%= image_tag "artisan-working.jpg", class: "img-fluid rounded-4 shadow", alt: "Kenyan Artisan working on leather" %>
      </div>
      <div class="col-lg-6 ps-lg-5">
        <h2 class="fw-bold mb-3">Why Choose Tajaone?</h2>
        <p class="text-muted">
          At TAJAONE.APP, we believe in the power of authentic Kenyan craftsmanship. Unlike mass-produced synthetic imports, our products are crafted from <strong>100% genuine leather</strong> sourced directly from local tanneries.
        </p>
        <p class="text-muted">
          Every backpack, wallet, and belt tells a story of skill and durability. When you shop with us, you aren't just buying a product; you are supporting the local Nairobi economy and investing in an accessory that gets better with age.
        </p>
        <div class="mt-4">
          <%= link_to "Read Our Story", about_path, class: "text-decoration-none fw-bold text-primary" %>
          <i class="bi bi-arrow-right ms-1"></i>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="container my-5 text-center">
  <div class="bg-primary bg-opacity-10 rounded-4 p-5">
    <h3>Join the Tajaone Community</h3>
    <p class="mb-4">Subscribe for exclusive discounts on leather goods and new arrival alerts.</p>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form class="d-flex gap-2">
          <input type="email" class="form-control" placeholder="Enter your email address">
          <button type="submit" class="btn btn-dark">Subscribe</button>
        </form>
        <small class="text-muted mt-2 d-block">We respect your inbox. No spam.</small>
      </div>
    </div>
  </div>
</section>