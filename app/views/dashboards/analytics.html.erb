
  <div class="row g-4 mb-5">
    <div class="col-12">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h5 class="fw-bold mb-0">Store Analytics</h5>
          <form action="<%= seller_dashboard_path %>" method="get" data-turbo-frame="_top">
            <select name="range" class="form-select form-select-sm w-auto border-0 bg-light fw-semibold" onchange="this.form.submit()">
              <option value="30_days" <%= "selected" if params[:range] == "30_days" || params[:range].nil? %>>Last 30 Days</option>
              <option value="7_days" <%= "selected" if params[:range] == "7_days" %>>Last 7 Days</option>
              <option value="this_year" <%= "selected" if params[:range] == "this_year" %>>This Year</option>
            </select>
          </form>
        </div>
        
        <% if @sales_data.present? %>
          <%= line_chart @sales_data, height: "350px", colors: ["#008060"], curve: true %>
        <% else %>
          <div class="text-center py-5 text-muted bg-light rounded-3">
            <i class="bi bi-bar-chart fs-1 d-block mb-2 opacity-50"></i>
            No sales data available yet.
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white">
        <h5 class="fw-bold mb-4">Revenue Trend</h5>
        <% if @revenue_data.present? %>
          <%= area_chart @revenue_data, height: "250px", colors: ["#20c997"], prefix: "KES " %>
        <% else %>
          <p class="text-muted text-center py-4">No revenue data available.</p>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white">
        <h5 class="fw-bold mb-4">Top Selling Products</h5>
        <% if @top_products.present? %>
          <%= column_chart @top_products, height: "250px", colors: ["#ffc107"] %>
        <% else %>
          <p class="text-muted text-center py-4">No product sales yet.</p>
        <% end %>
      </div>
    </div>
  </div>
