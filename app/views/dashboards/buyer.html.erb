<div class="container my-5">
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h1 class="fw-bold text-center mb-4 text-primary">Buyer Dashboard</h1>

      <h2 class="h4 mb-3 text-secondary border-bottom pb-2">My Orders</h2>

      <% if @orders.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
              <tr>
                <th scope="col">Products</th>
                <th scope="col">Status</th>
                <th scope="col">Payment</th>
                <th scope="col">Shipment</th>
                <th scope="col">Estimated Delivery</th>
                <th scope="col" class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td>
                    <% order.order_items.each do |item| %>
                      <%= link_to item.product.title, product_path(item.product), class: "text-decoration-none text-dark fw-semibold" %><br>
                    <% end %>
                  </td>
                  <td>
                    <span class="badge bg-<%= order.status == 'completed' ? 'success' : 'warning' %>">
                      <%= order.status.capitalize %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-<%= order.payment&.status == 'completed' ? 'success' : 'secondary' %>">
                      <%= order.payment&.status&.capitalize || "Pending" %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-<%= order.shipment&.status == 'delivered' ? 'success' : (order.shipment&.status == 'in_transit' ? 'info' : 'secondary') %>">
                      <%= order.shipment&.status&.humanize || "Not shipped" %>
                    </span>
                  </td>
                  <td>
                    <% if order.shipment&.estimated_delivery_date %>
                      <%= order.shipment.estimated_delivery_date.strftime("%B %d, %Y") %>
                    <% else %>
                      <span class="text-muted">N/A</span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <%= link_to "View", order_path(order), class: "btn btn-sm btn-outline-primary me-1" %>

                    <% if order.shipment&.status == "in_transit" %>
                      <%= button_to "Track", track_order_shipment_path(order), method: :post,
                                    class: "btn btn-sm btn-info text-white me-1" %>
                    <% end %>

                    <% if order.shipment&.status == "shipped" %>
                      <%= button_to "Confirm Delivery", order_shipment_path(order), method: :patch,
                                    params: { shipment: { status: "delivered" } },
                                    class: "btn btn-sm btn-success",
                                    data: { confirm: "Confirm that you’ve received this order?" } %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info mt-4 text-center">
          You haven’t placed any orders yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
