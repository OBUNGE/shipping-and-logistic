<div class="container py-5 bg-light-subtle">
  
  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h1 class="fw-bold text-dark mb-1">Seller Dashboard</h1>
      <p class="text-muted mb-0">Manage your store, products, and orders efficiently.</p>
    </div>
    <div class="d-flex gap-2">
      <%= link_to edit_seller_path(current_user.store_slug), class: "btn btn-outline-dark rounded-pill px-4 fw-semibold hover-shadow" do %>
        <i class="bi bi-shop me-2"></i> Edit Storefront
      <% end %>
      <%= link_to new_product_path, class: "btn btn-primary rounded-pill px-4 fw-semibold shadow-sm hover-up" do %>
        <i class="bi bi-plus-lg me-2"></i> Add Product
      <% end %>
    </div>
  </div>

  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 hover-lift">
        <div class="d-flex align-items-center mb-3">
          <div class="icon-square bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3">
            <i class="bi bi-bag-check fs-4"></i>
          </div>
          <div>
            <h6 class="text-muted mb-0 text-uppercase small fw-bold">Total Products</h6>
            <h2 class="fw-bold text-dark mb-0"><%= @products.count %></h2>
          </div>
        </div>
        <div class="progress" style="height: 6px;">
          <div class="progress-bar bg-primary" role="progressbar" style="width: 70%"></div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 hover-lift">
        <div class="d-flex align-items-center mb-3">
          <div class="icon-square bg-info bg-opacity-10 text-info rounded-3 p-3 me-3">
            <i class="bi bi-box-seam fs-4"></i>
          </div>
          <div>
            <h6 class="text-muted mb-0 text-uppercase small fw-bold">Total Orders</h6>
            <h2 class="fw-bold text-dark mb-0"><%= @orders.count %></h2>
          </div>
        </div>
        <div class="progress" style="height: 6px;">
          <div class="progress-bar bg-info" role="progressbar" style="width: 50%"></div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100 hover-lift">
        <div class="d-flex align-items-center mb-3">
          <div class="icon-square bg-success bg-opacity-10 text-success rounded-3 p-3 me-3">
            <i class="bi bi-cash-stack fs-4"></i>
          </div>
          <div>
            <h6 class="text-muted mb-0 text-uppercase small fw-bold">Total Revenue</h6>
            <h2 class="fw-bold text-dark mb-0">
              <%= display_price(@orders.joins(:payments).where(payments: { status: "paid" }).sum(:total)) %>
            </h2>
          </div>
        </div>
        <div class="progress" style="height: 6px;">
          <div class="progress-bar bg-success" role="progressbar" style="width: 85%"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4 mb-5">
    <div class="col-12">
      <h5 class="fw-bold mb-3 text-dark">Shipment Overview</h5>
    </div>
    <% 
      pending = @orders.joins(:shipment).where(shipments: { status: "pending" }).count 
      transit = @orders.joins(:shipment).where(shipments: { status: "in_transit" }).count 
      delivered = @orders.joins(:shipment).where(shipments: { status: "delivered" }).count 
    %>
    
    <div class="col-md-4">
      <div class="p-3 bg-white border rounded-4 d-flex align-items-center justify-content-between shadow-sm">
        <div class="d-flex align-items-center">
          <span class="badge bg-warning bg-opacity-10 text-warning p-2 rounded-circle me-3"><i class="bi bi-clock-history fs-5"></i></span>
          <span class="fw-semibold text-muted">Pending</span>
        </div>
        <span class="fs-4 fw-bold text-dark"><%= pending %></span>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="p-3 bg-white border rounded-4 d-flex align-items-center justify-content-between shadow-sm">
        <div class="d-flex align-items-center">
          <span class="badge bg-info bg-opacity-10 text-info p-2 rounded-circle me-3"><i class="bi bi-truck fs-5"></i></span>
          <span class="fw-semibold text-muted">In Transit</span>
        </div>
        <span class="fs-4 fw-bold text-dark"><%= transit %></span>
      </div>
    </div>

    <div class="col-md-4">
      <div class="p-3 bg-white border rounded-4 d-flex align-items-center justify-content-between shadow-sm">
        <div class="d-flex align-items-center">
          <span class="badge bg-success bg-opacity-10 text-success p-2 rounded-circle me-3"><i class="bi bi-check-lg fs-5"></i></span>
          <span class="fw-semibold text-muted">Delivered</span>
        </div>
        <span class="fs-4 fw-bold text-dark"><%= delivered %></span>
      </div>
    </div>
  </div>

  <div class="row g-4 mb-5">
    <div class="col-12">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h5 class="fw-bold mb-0">Sales Analytics</h5>
          <select class="form-select form-select-sm w-auto border-0 bg-light fw-semibold">
            <option>Last 30 Days</option>
            <option>Last 7 Days</option>
            <option>This Year</option>
          </select>
        </div>
        
        <% if @sales_data.present? %>
          <%= line_chart @sales_data, height: "350px", colors: ["#0d6efd"], curve: true %>
        <% else %>
          <div class="text-center py-5 text-muted bg-light rounded-3">
            <i class="bi bi-bar-chart fs-1 d-block mb-2 opacity-50"></i>
            No sales data available yet.
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
        <h5 class="fw-bold mb-4">Revenue Trend</h5>
        <% if @revenue_data.present? %>
          <%= area_chart @revenue_data, height: "250px", colors: ["#198754"] %>
        <% else %>
          <p class="text-muted text-center py-4">No revenue data available.</p>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
        <h5 class="fw-bold mb-4">Top Products</h5>
        <% if @top_products.present? %>
          <%= column_chart @top_products, height: "250px", colors: ["#ffc107"] %>
        <% else %>
          <p class="text-muted text-center py-4">No product sales yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h5 class="fw-bold mb-0">Recent Products</h5>
      <%= link_to "View All", products_path, class: "text-decoration-none fw-semibold small" %>
    </div>

    <% if @products.any? %>
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="list-group list-group-flush">
          <% @products.limit(5).each do |product| %>
            <div class="list-group-item p-3 border-light d-flex align-items-center justify-content-between hover-bg-light transition-all">
              <div class="d-flex align-items-center gap-3">
                <% if product.image_url.present? %>
                  <%= image_tag product.image_url, class: "rounded-3 object-fit-cover", style: "width: 48px; height: 48px;" %>
                <% else %>
                  <div class="bg-light rounded-3 d-flex align-items-center justify-content-center text-muted" style="width: 48px; height: 48px;">
                    <i class="bi bi-image"></i>
                  </div>
                <% end %>
                <div>
                  <h6 class="mb-0 fw-semibold text-dark"><%= product.title %></h6>
                  <small class="text-muted"><%= number_to_currency(product.price, unit: "KES ") %></small>
                </div>
              </div>
              <div class="d-flex align-items-center gap-2">
                <span class="badge bg-light text-dark border"><%= product.stock %> in stock</span>
                <%= link_to product_path(product), class: "btn btn-light btn-sm rounded-circle border" do %>
                  <i class="bi bi-arrow-right"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-5 bg-white rounded-4 shadow-sm">
        <p class="text-muted mb-3">You haven't added any products yet.</p>
        <%= link_to "+ Add Your First Product", new_product_path, class: "btn btn-primary rounded-pill px-4" %>
      </div>
    <% end %>
  </div>

  <div class="mb-5">
    <h5 class="fw-bold mb-3">Recent Orders</h5>
    <% if @orders.any? %>
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
              <tr>
                <th class="ps-4 py-3 fw-semibold">Customer</th>
                <th class="py-3 fw-semibold">Order Info</th>
                <th class="py-3 fw-semibold">Status</th>
                <th class="py-3 fw-semibold">Payment</th>
                <th class="py-3 fw-semibold">Shipment</th>
                <th class="text-end pe-4 py-3 fw-semibold">Action</th>
              </tr>
            </thead>
            <tbody class="border-top-0">
              <% @orders.each do |order| %>
                <% latest_payment = order.payments.last %>
                <tr>
                  <td class="ps-4">
                    <div class="d-flex align-items-center">
                      <div class="avatar-initial rounded-circle bg-primary bg-opacity-10 text-primary fw-bold me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                        <%= (order.buyer&.email || order.email || "?").first.upcase %>
                      </div>
                      <div>
                        <div class="fw-semibold text-dark"><%= order.buyer&.email || order.email %></div>
                        <small class="text-muted">ID: #<%= order.id %></small>
                      </div>
                    </div>
                  </td>

                  <td>
                    <small class="text-muted d-block">
                      <%= order.order_items.count %> Items • <%= time_ago_in_words(order.created_at) %> ago
                    </small>
                  </td>

                  <td>
                    <span class="badge rounded-pill bg-light text-dark border px-3">
                      <%= order.status.capitalize %>
                    </span>
                  </td>

                  <td>
                    <% if latest_payment&.status == "paid" %>
                      <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3">Paid</span>
                    <% else %>
                      <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning px-3">Pending</span>
                    <% end %>
                  </td>

                  <td>
                    <% status = order.shipment&.status %>
                    <span class="badge rounded-pill px-3 bg-<%= status == 'delivered' ? 'success' : (status == 'in_transit' ? 'info' : 'secondary') %>">
                      <%= status&.humanize || "Not Shipped" %>
                    </span>
                  </td>

                  <td class="text-end pe-4">
                    <div class="dropdown">
                      <button class="btn btn-sm btn-light border rounded-3 px-3 fw-semibold" type="button" data-bs-toggle="dropdown">
                        Manage
                      </button>
                      <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm rounded-3 mt-1">
                        <li><%= link_to "View Details", order_path(order), class: "dropdown-item" %></li>
                        <% if latest_payment&.status == "paid" && order.shipment.nil? %>
                          <li>
                            <%= button_to "Create Shipment", order_shipment_path(order), 
                                method: :post, 
                                class: "dropdown-item text-success", 
                                data: { confirm: "Create shipment?" } %>
                          </li>
                        <% elsif order.shipment.present? %>
                          <li><%= link_to "Track Shipment", order_shipment_path(order), class: "dropdown-item" %></li>
                        <% end %>
                      </ul>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="text-center py-5 bg-white rounded-4 shadow-sm border">
        <i class="bi bi-box-seam fs-1 text-muted opacity-50 mb-3 d-block"></i>
        <p class="text-muted">No orders received yet.</p>
      </div>
    <% end %>
  </div>

</div>

<style>
  /* ✨ Custom Styles for Dashboard */
  .hover-lift { transition: transform 0.2s, box-shadow 0.2s; }
  .hover-lift:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important; }
  
  .hover-up:hover { transform: translateY(-2px); }
  
  .hover-bg-light:hover { background-color: #f8f9fa; }
  .transition-all { transition: all 0.2s ease-in-out; }

  .icon-square {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .avatar-initial {
    font-size: 0.9rem;
  }
  
  /* Smooth dropdown animation override */
  .dropdown-menu { animation: fadeIn 0.2s ease-out; }
  @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }
</style>