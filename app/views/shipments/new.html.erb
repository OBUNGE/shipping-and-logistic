<%= form_with model: [@order, @shipment], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, value: @order.first_name, class: "form-control", readonly: true %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, value: @order.last_name, class: "form-control", readonly: true %>
  </div>

  <div class="mb-3">
    <%= f.label :carrier %>
    <%= f.select :carrier, Shipment.carriers.keys.map { |c| [c.titleize, c] }, {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :cost %>
    <%= f.number_field :cost, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :address %>
    <%= f.text_area :address, value: @order.address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number, value: @order.phone_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :country %>
    <%= f.text_field :country, value: @order.country, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :city %>
    <%= f.text_field :city, value: @order.city, class: "form-control" %>
  </div>

  <%= f.submit "Create Shipment", class: "btn btn-primary" %>
<% end %>

