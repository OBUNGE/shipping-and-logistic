<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
          <h2 class="fw-bold text-primary mb-4">ðŸš€ Become a Seller</h2>
          <p class="text-muted mb-4">
            Provide your business details to set up your storefront and start selling on AfriXpress.
          </p>

          <%= form_with model: @user, url: become_seller_path, local: true, class: "needs-validation" do |f| %>
            <%= render "devise/shared/error_messages", resource: @user %>

            <!-- Company Name -->
            <div class="mb-3">
              <%= f.label :company_name, "Company / Store Name", class: "form-label fw-semibold" %>
              <%= f.text_field :company_name, class: "form-control rounded-3", placeholder: "Your business or brand name" %>
            </div>

            <!-- Phone -->
            <div class="mb-3">
              <%= f.label :phone, "Phone Number", class: "form-label fw-semibold" %>
              <%= f.telephone_field :phone, class: "form-control rounded-3", placeholder: "e.g. 0712345678" %>
            </div>

            <!-- Country -->
            <div class="mb-3">
              <%= f.label :country, class: "form-label fw-semibold" %>
              <%= f.select :country,
                    options_for_select(["Kenya", "United States", "United Kingdom", "Nigeria", "South Africa"], selected: @user.country),
                    { prompt: "Select your country" },
                    class: "form-select rounded-3" %>
            </div>

            <!-- Store Logo -->
            <div class="mb-3">
              <%= f.label :store_logo_url, "Store Logo", class: "form-label fw-semibold" %>
              <%= f.file_field :store_logo_url, class: "form-control rounded-3" %>
            </div>

            <!-- Store Banner -->
            <div class="mb-3">
              <%= f.label :store_banner_url, "Store Banner", class: "form-label fw-semibold" %>
              <%= f.file_field :store_banner_url, class: "form-control rounded-3" %>
            </div>

            <!-- Store Description -->
            <div class="mb-3">
              <%= f.label :store_description, "Business Description", class: "form-label fw-semibold" %>
              <%= f.text_area :store_description, rows: 4, class: "form-control rounded-3", placeholder: "Tell buyers about your store" %>
            </div>

            <!-- Submit -->
            <div class="d-grid mt-4">
              <%= f.submit "Create Storefront", class: "btn btn-primary fw-semibold py-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
