<h2>Storefront Settings</h2>
<p>Update your store name, logo, banner, and description.</p>

<%= form_with model: @seller, url: seller_path(@seller.store_slug), method: :patch, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :store_name, "Store Name", class: "form-label" %>
    <%= f.text_field :store_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :store_logo_url, "Store Logo URL", class: "form-label" %>
    <%= f.text_field :store_logo_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :store_banner_url, "Store Banner URL", class: "form-label" %>
    <%= f.text_field :store_banner_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :store_description, "Description", class: "form-label" %>
    <%= f.text_area :store_description, class: "form-control", rows: 3 %>
  </div>

  <%= f.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
