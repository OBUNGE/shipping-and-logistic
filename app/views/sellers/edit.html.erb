<h2>Edit Storefront</h2>

<%= form_with model: @seller, url: seller_path(@seller.store_slug), method: :patch, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :store_name, "Store Name", class: "form-label" %>
    <%= f.text_field :store_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :store_description, "Description", class: "form-label" %>
    <%= f.text_area :store_description, rows: 3, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :store_banner, "Banner", class: "form-label" %>
    <%= f.file_field :store_banner, class: "form-control" %>
    <% if @seller.store_banner.attached? %>
      <%= image_tag @seller.store_banner.variant(resize_to_limit: [600, 200]), class: "img-fluid mt-2" %>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :store_logo, "Logo", class: "form-label" %>
    <%= f.file_field :store_logo, class: "form-control" %>
    <% if @seller.store_logo.attached? %>
      <%= image_tag @seller.store_logo.variant(resize_to_limit: [100, 100]), class: "rounded-circle mt-2" %>
    <% end %>
  </div>

  <%= f.submit "Save Changes", class: "btn btn-primary" %>
<% end %>
