<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= content_for(:title) || "Shiping" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# PWA manifest (optional) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Stylesheets and JavaScript %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <%= javascript_importmap_tags %>

    <style>
      .navbar.sticky-top {
        z-index: 1030; /* ensure it stays above other content */
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top shadow-sm">
      <div class="container-fluid px-0">
        <a class="navbar-brand px-3" href="<%= root_path %>">Shiping</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse px-3" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>

            <% if user_signed_in? %>
              <% unread_count = current_user.notifications.where(read: false).count %>
              <li class="nav-item">
                <%= link_to "Notifications (#{unread_count})", notifications_path, class: "nav-link" %>
              </li>

              <% if current_user.buyer? %>
                <li class="nav-item">
                  <%= link_to "Buyer Dashboard", buyer_dashboard_path, class: "nav-link" %>
                </li>
              <% end %>

              <% if current_user.seller? %>
                <li class="nav-item">
                  <%= link_to "Seller Dashboard", seller_dashboard_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "My Shipments", shipments_path, class: "nav-link" %>
                </li>
              <% end %>

              <% if current_user.admin? %>
                <li class="nav-item">
                  <%= link_to "All Shipments", shipments_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Admin Panel", admin_root_path, class: "nav-link" %>
                </li>
              <% end %>

              <% if current_user.buyer? && !current_user.seller? %>
                <li class="nav-item">
                  <%= button_to "Seller", become_seller_path, method: :post,
                                class: "btn btn-sm btn-outline-success nav-link",
                                form: { "data-turbo" => "false" } %>
                </li>
              <% end %>

              <% if current_user.seller? && !current_user.buyer? %>
                <li class="nav-item">
                  <%= button_to "Become a Buyer", become_buyer_path, method: :post,
                                class: "btn btn-sm btn-outline-success nav-link",
                                form: { "data-turbo" => "false" } %>
                </li>
              <% end %>

              <% if current_user.buyer? && current_user.seller? %>
                <li class="nav-item">
                  <%= button_to "Switch to #{current_user.active_role == 'buyer' ? 'Seller' : 'Buyer'} Mode",
                                toggle_role_path, method: :post,
                                class: "btn btn-sm btn-outline-primary nav-link",
                                form: { "data-turbo" => "false" } %>
                </li>
              <% end %>

              <li class="nav-item">
                <%= button_to "Logout", destroy_user_session_path, method: :delete,
                              class: "btn btn-link nav-link", form: { "data-turbo" => "false" } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>

          <% cart_count = (session[:cart] || []).sum { |item| item["quantity"].to_i } %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to cart_path, class: "nav-link" do %>
                ðŸ›’ Cart (<%= cart_count %>)
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid px-0">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key == "notice" ? "success" : "danger" %> mx-3">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
