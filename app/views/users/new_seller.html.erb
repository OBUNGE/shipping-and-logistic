<div class="container my-5">
  <h2 class="fw-bold mb-4">ğŸ›ï¸ Become a Seller</h2>
  <p class="text-muted mb-4">
    Fill in your storefront details below. Once complete, youâ€™ll be able to manage products and sales.
  </p>

  <%= form_with model: current_user, url: become_seller_path, method: :post, local: true, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :store_name, "Store Name", class: "form-label fw-semibold" %>
      <%= f.text_field :store_name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :store_description, "Store Description", class: "form-label fw-semibold" %>
      <%= f.text_area :store_description, rows: 4, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :store_logo_url, "Store Logo URL", class: "form-label fw-semibold" %>
      <%= f.text_field :store_logo_url, class: "form-control" %>
      <small class="text-muted">Paste a link to your logo image (optional).</small>
    </div>

    <div class="mb-3">
      <%= f.label :store_banner_url, "Store Banner URL", class: "form-label fw-semibold" %>
      <%= f.text_field :store_banner_url, class: "form-control" %>
      <small class="text-muted">Paste a link to your banner image (optional).</small>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <%= f.submit "Create Storefront", class: "btn btn-primary px-4" %>
      <%= link_to "Cancel", account_path, class: "btn btn-outline-secondary px-4" %>
    </div>
  <% end %>
</div>
