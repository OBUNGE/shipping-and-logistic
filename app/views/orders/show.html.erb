<div class="container my-5">
  <div class="order-summary-wrapper mx-auto">
    <div class="order-header text-center mb-5">
      <h1 class="fw-bold text-primary mb-2">üßæ Order Summary</h1>
      <p class="text-muted mb-0">Order details and payment confirmation</p>
    </div>

    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
      <div class="card-body p-5">
        <!-- Basic Info -->
        <div class="d-flex justify-content-between flex-wrap mb-4 border-bottom pb-3">
          <div>
            <p class="mb-1"><strong>Order ID:</strong> <%= @order.id %></p>
            <p class="mb-1"><strong>Placed on:</strong> <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          <div>
            <span class="badge bg-<%= @order.status == 'paid' ? 'success' : 'warning' %> px-3 py-2 fs-6">
              <%= @order.status.capitalize %>
            </span>
          </div>
        </div>

        <!-- Buyer and Seller Info -->
        <div class="row g-4 mb-4">
          <div class="col-md-6">
            <div class="border rounded-3 p-3 bg-light">
              <h5 class="fw-semibold text-primary mb-2">Buyer Information</h5>
              <p class="mb-1"><strong>Name:</strong> <%= @order.buyer.name %></p>
              <p class="mb-1"><strong>Email:</strong> <%= @order.buyer.email %></p>
              <p class="mb-0"><strong>Phone:</strong> <%= @order.buyer.phone.presence || "Not provided" %></p>
            </div>
          </div>
          <div class="col-md-6">
            <div class="border rounded-3 p-3 bg-light">
              <h5 class="fw-semibold text-primary mb-2">Seller Information</h5>
              <p class="mb-1"><strong>Name:</strong> <%= @order.seller.company_name.presence || @order.seller.name %></p>
              <p class="mb-0"><strong>Email:</strong> <%= @order.seller.email %></p>
            </div>
          </div>
        </div>

        <!-- Items Table -->
        <% currency = @order.currency.presence || "USD" %>
        <div class="table-responsive mb-4">
          <h5 class="fw-semibold mb-3">üõçÔ∏è Items Purchased</h5>
          <table class="table align-middle">
            <thead class="table-primary text-dark">
              <tr>
                <th>Product</th>
                <th>Variant</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Shipping</th>
                <th>Subtotal</th>
              </tr>
            </thead>
            <tbody>
              <% @order.order_items.each do |item| %>
                <tr>
                  <td><%= item.product.title %></td>
                  <td>
                    <% if item.variant.present? %>
                      <span class="badge bg-info text-dark">
                        <%= "#{item.variant.name}: #{item.variant.value}" %>
                      </span>
                    <% else %>
                      <span class="text-muted">‚Äî</span>
                    <% end %>
                  </td>
                  <td><%= item.quantity %></td>
                  <td><%= display_price(item.unit_price || item.product.price, user: @order.buyer) %></td>
                  <td><%= display_price(item.shipping || 0, user: @order.buyer) %></td>
                  <td class="fw-semibold"><%= display_price(item.subtotal, user: @order.buyer) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Totals -->
        <% subtotal = @order.order_items.sum(&:subtotal) %>
        <% shipping_total = @order.order_items.sum { |i| i.shipping || 0 } %>
        <% grand_total = subtotal + shipping_total %>

        <div class="border-top pt-3 mb-4">
          <div class="d-flex justify-content-end flex-column align-items-end">
            <p class="mb-1 fw-semibold">Subtotal: <%= number_to_currency(subtotal, unit: "#{currency} ") %></p>
            <p class="mb-1 fw-semibold">Shipping: <%= number_to_currency(shipping_total, unit: "#{currency} ") %></p>
            <h4 class="fw-bold text-success">Total: <%= number_to_currency(grand_total, unit: "#{currency} ") %></h4>

            <% if currency == "USD" %>
              <% converted_total = ExchangeRateService.convert(@order.total, from: "USD", to: "KES") %>
              <% if converted_total %>
                <p class="text-muted small">‚âà <%= number_to_currency(converted_total, unit: "KES ") %></p>
              <% else %>
                <p class="text-muted small">Exchange rate unavailable.</p>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Payment Info -->
        <div class="border rounded-3 p-4 bg-light mb-3">
          <h5 class="fw-semibold text-primary mb-3">üí≥ Payment Details</h5>
          <% if @order.payment.present? %>
            <p class="mb-1"><strong>Provider:</strong> <%= @order.payment.provider.capitalize %></p>
            <p class="mb-1"><strong>Status:</strong>
              <span class="badge bg-<%= @order.payment.status == 'paid' ? 'success' : 'warning' %>">
                <%= @order.payment.status.capitalize %>
              </span>
            </p>
            <p class="mb-1"><strong>Transaction ID:</strong> <%= @order.payment.transaction_id %></p>
            <p class="mb-2"><strong>Amount Paid:</strong> <%= number_to_currency(@order.payment.amount, unit: "#{@order.payment.currency.presence || currency} ") %></p>

            <% if @order.payment.paid? %>
              <% if @order.payment.mpesa_receipt_number.present? %>
                <p><strong>Receipt:</strong> <%= @order.payment.mpesa_receipt_number %></p>
              <% end %>
              <%= link_to "Download Receipt", receipt_order_path(@order), class: "btn btn-outline-primary mt-2 rounded-pill" %>
            <% else %>
              <p class="text-warning">Payment is pending. Please complete it on your phone.</p>
            <% end %>
          <% else %>
            <p class="text-danger">No payment record found.</p>
          <% end %>
        </div>

        <!-- Back -->
        <div class="text-end">
          <%= link_to "‚Üê Back to Orders", orders_path, class: "btn btn-secondary rounded-pill px-4" %>
        </div>
      </div>
    </div>
  </div>
</div>

