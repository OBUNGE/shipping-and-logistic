<%= form_with(model: discount, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :percentage, "Discount Percentage (%)", class: "form-label fw-semibold" %>
    <%= f.number_field :percentage, step: 0.01, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :start_date, "Start Date", class: "form-label fw-semibold" %>
    <%= f.date_field :start_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date, "End Date", class: "form-label fw-semibold" %>
    <%= f.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "Active?", class: "form-check-label" %>
  </div>

  <%= f.submit discount.persisted? ? "Update Discount" : "Create Discount",
               class: "btn btn-success fw-semibold px-4 rounded-pill" %>
<% end %>
