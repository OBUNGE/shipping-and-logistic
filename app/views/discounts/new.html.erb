<h1 class="mb-4">Add Discount</h1>

<%= form_with model: @discount, url: discounts_path(product_id: @product.id), local: true, html: { class: "card p-4 shadow-sm" } do |form| %>
  <% if @discount.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@discount.errors.count, "error") %> prevented this discount from being saved:</h5>
      <ul>
        <% @discount.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :percentage, "Discount Percentage", class: "form-label" %>
    <%= form.number_field :percentage, step: 0.01, class: "form-control", placeholder: "e.g. 15", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :expires_at, "Expires At", class: "form-label" %>
    <%= form.date_field :expires_at, class: "form-control", required: true %>
  </div>

  <%= form.submit "Create Discount", class: "btn btn-primary mt-3" %>
<% end %>

<div class="mt-3">
  <%= link_to "â† Back to Product", edit_product_path(@product), class: "btn btn-link" %>
</div>
