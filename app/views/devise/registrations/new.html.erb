<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg border-0 rounded-4" style="max-width: 480px; width: 100%;">
    <div class="card-body p-5">
      <h2 class="text-center fw-bold mb-4 text-primary">
        üìù Create Your Account
      </h2>
      <p class="text-center text-muted small mb-4">
        Join our B2B community to buy and sell products securely.
      </p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Full Name -->
        <div class="mb-3">
          <%= f.label :name, "Full Name", class: "form-label fw-semibold" %>
          <%= f.text_field :name, class: "form-control rounded-3", placeholder: "Enter your full name" %>
        </div>

        <!-- Company -->
        <div class="mb-3">
          <%= f.label :company_name, "Company / Store Name", class: "form-label fw-semibold" %>
          <%= f.text_field :company_name, class: "form-control rounded-3", placeholder: "Your business or brand name" %>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-semibold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control rounded-3", placeholder: "you@example.com" %>
        </div>

        <!-- Phone -->
        <div class="mb-3">
          <%= f.label :phone, "Phone Number", class: "form-label fw-semibold" %>
          <%= f.telephone_field :phone, class: "form-control rounded-3", placeholder: "e.g. 0712345678" %>
        </div>

        <!-- Country -->
        <div class="mb-3">
          <%= f.label :country, class: "form-label fw-semibold" %>
          <%= f.select :country,
                options_for_select([
                  ["Kenya", "Kenya"],
                  ["United States", "United States"],
                  ["United Kingdom", "United Kingdom"],
                  ["Nigeria", "Nigeria"],
                  ["South Africa", "South Africa"]
                ]),
                { prompt: "Select your country" },
                class: "form-select rounded-3" %>
        </div>

        <!-- Roles -->
        <div class="mb-3">
          <%= f.label :roles, "Choose your role(s)", class: "form-label fw-semibold" %>
          <%= f.select :roles,
                options_for_select([["Buyer", "buyer"], ["Seller", "seller"]]),
                {},
                multiple: true,
                class: "form-select rounded-3" %>
          <small class="text-muted">You can select one or both roles.</small>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-semibold" %>
          <% if @minimum_password_length %>
            <em class="text-muted small">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control rounded-3", placeholder: "Create a strong password" %>
        </div>

        <!-- Password Confirmation -->
        <div class="mb-4">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-semibold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control rounded-3", placeholder: "Re-enter your password" %>
        </div>

        <!-- Submit -->
        <div class="d-grid mb-3">
          <%= f.submit "Create Account", class: "btn btn-primary rounded-3 fw-semibold py-2" %>
        </div>
      <% end %>

      <div class="text-center">
        <p class="small mb-0 text-muted">
          Already have an account?
          <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none text-primary fw-semibold" %>
        </p>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
  }

  .card {
    background: #fff;
  }

  .form-control, .form-select {
    border: 1px solid #ced4da;
    transition: all 0.2s ease;
  }

  .form-control:focus, .form-select:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.15rem rgba(13,110,253,0.25);
  }

  .btn-primary {
    background: linear-gradient(90deg, #0d6efd, #4dabf7);
    border: none;
    transition: 0.3s;
  }

  .btn-primary:hover {
    background: linear-gradient(90deg, #0b5ed7, #339af0);
  }

  .card-body {
    animation: fadeInUp 0.6s ease;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
